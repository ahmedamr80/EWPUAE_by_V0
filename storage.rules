rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Profile Pictures: Users can upload/delete their own. Admins can manage all.
    match /profile-pictures/{userId}/{fileName} {
      allow read: if true; // Profile pictures are public
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }
    
    // Event Logos: Only admins can manage.
    match /event-logos/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Club Pictures: Only admins can manage.
    match /club-pictures/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
